@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<h2>Giriş Yap</h2>
<h3><a href="@Url.Action("Register")">Üyeliğiniz Yoksa Kayıt Sayfası</a></h3>
<form action="@Url.Action("Login")" method="post">
    <div class="form-group">
        <input type="text" class="form-control" id="Email" name="Email" placeholder="Mail">
    </div>
    <div class="form-group">
        <input type="password" class="form-control" id="Password" name="Password" placeholder="Şifre">
    </div>
    <button type="submit" class="btn btn-primary">Giriş Yap</button>
</form>